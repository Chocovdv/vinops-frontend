---
export const prerender = false;

import AppLayout from "../../../../layouts/AppLayout.astro";
import ProductoDetalle from "../../../../components/inventario/ProductoDetalle.jsx";

const { id } = Astro.params;

const pageTitle = `VinOps – Producto ${id}`;
const activeSection = "inventario";
---

<AppLayout pageTitle={pageTitle} activeSection={activeSection}>
  <section class="container py-3">
    {/* Submenú Inventario */}
    <ul class="nav nav-pills mb-3">
      <li class="nav-item">
        <a href="/app/inventario/productos" class="nav-link active">
          Productos
        </a>
      </li>
      <li class="nav-item">
        <a href="/app/inventario/lotes" class="nav-link">
          Lotes
        </a>
      </li>
    </ul>

    <ProductoDetalle client:load productoId={id} />
  </section>
</AppLayout>
