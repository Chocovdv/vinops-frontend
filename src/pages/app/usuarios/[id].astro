---
// src/pages/app/usuarios/[id].astro
export const prerender = false;

import AppLayout from "../../../layouts/AppLayout.astro";
import UsuarioDetalle from "../../../components/usuarios/UsuarioDetalle.jsx";

const { id } = Astro.params;

const pageTitle = "Detalle de usuario | VinOps";
const activeSection = "usuarios";
---

<AppLayout pageTitle={pageTitle} activeSection={activeSection}>
  <section class="container py-3">
    <h1 class="h3 mb-3">Detalle de usuario</h1>
    <UsuarioDetalle client:load usuarioId={id} />
  </section>
</AppLayout>
